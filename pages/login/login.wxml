<!--pages/login/login.wxml-->
<view class='loginform'>
  <view class='input-line input-line_special'>
    <input class='input-vl' type='text' bindinput="loginName" placeholder='请输入您的用户名'></input>
  </view>
  <view class='input-line'>
    <input class='input-vl' type='password' bindinput="loginPswd" placeholder='请输入您的密码'></input>
  </view>
  <view class="wronginfo">
    <text wx:if="wronginfo != ''">{{wronginfo}}</text>
  </view>
  <view class='button-line input-line_special'>
    <button class='button-vl' type='primary' bindtap="toLogin">马上登录</button>
  </view>
</view>